<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost:3000/styles/main.css">
</head>
<body>
    <%- include('../layout/navbar') %>
    <div class="px-5">
        <h1 class="my-5">Hola, <%= user.name %> </h1>

    <form action="/create-album" method="post">
        <input type="text" name="name" placeholder="Nombre del album" class="form-control my-3" style="max-width: 200px;">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="isprivate" checked>
            <label class="form-check-label" for="flexCheckDefault">
              Album privado
            </label>
        </div>
        <input type="submit" value="Crear album" class="btn btn-success my-2">
    </form>

    <div class="albums d-flex gap-3 my-5">
        <% albums.forEach(album => { %>
            <div class="card shadow" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title my-4"><%= album.name %></h5>
                  <a href="/albums/<%= album._id %>" class="btn btn-primary">Ver album</a>
                </div>
              </div>
        <% }) %>
    </div>
    </div>

</body>
</html>